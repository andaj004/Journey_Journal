<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/widget_margin_xsmall"
    app:cardCornerRadius="@dimen/widget_margin_xsmall">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_chateau">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_1"
            android:layout_margin="@dimen/widget_margin_normal"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_profile_24x"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent="0.4"
            android:orientation="vertical"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guideline_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/widget_margin_normal"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal"
            tools:text="Title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_description_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guideline_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_title_tv"
            android:layout_margin="@dimen/widget_margin_normal"
            android:ellipsize="end"
            android:maxLines="4"
            android:inputType="textMultiLine"
            tools:text="This is a test description and this will notify you about the fact"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guideline_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_description_tv"
            android:layout_margin="@dimen/widget_margin_normal"
            android:gravity="start"
            tools:text="2022-03-01"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_img_btn_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/item_date_tv"
            app:layout_constraintEnd_toStartOf="@+id/item_img_btn_edit"
            android:layout_margin="@dimen/widget_margin_normal"
            android:src="@android:drawable/ic_menu_share"
            android:background="@android:color/transparent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_img_btn_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/item_date_tv"
            app:layout_constraintEnd_toStartOf="@+id/item_img_btn_delete"
            android:layout_margin="@dimen/widget_margin_normal"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@android:color/transparent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_img_btn_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_date_tv"
            android:layout_margin="@dimen/widget_margin_normal"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>