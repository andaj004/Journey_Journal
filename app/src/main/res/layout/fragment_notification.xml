<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.andajsingh.journeyjournal.np.example.andajsingh.journeyjournal.presentation.dashboard.fragments.NotificationFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_margin_xsmall"
        app:cardCornerRadius="@dimen/widget_margin_xsmall">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_iv_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_1"
                android:layout_margin="@dimen/widget_margin_normal"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_notifications_24x"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintGuide_percent="0.2"
                android:orientation="vertical"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_description_tv_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/widget_margin_normal"
                android:ellipsize="end"
                android:maxLines="4"
                android:inputType="textMultiLine"
                android:text="This is a test description and this will notify you about the Journey"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_margin_xsmall"
        app:cardCornerRadius="@dimen/widget_margin_xsmall">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_iv_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_2"
                android:layout_margin="@dimen/widget_margin_normal"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_notifications_24x"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintGuide_percent="0.2"
                android:orientation="vertical"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_description_tv_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/widget_margin_normal"
                android:ellipsize="end"
                android:maxLines="4"
                android:inputType="textMultiLine"
                android:text="This is a test description and this will notify you about the fact"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_margin_xsmall"
        app:cardCornerRadius="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_iv"
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_3"
                android:layout_margin="@dimen/widget_margin_normal"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_notifications_24x"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintGuide_percent="0.2"
                android:orientation="vertical"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_description_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/widget_margin_normal"
                android:ellipsize="end"
                android:maxLines="4"
                android:inputType="textMultiLine"
                android:text="This is a test description and this will notify you about the fact"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>