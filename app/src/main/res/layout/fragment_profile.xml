<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.example.andajsingh.journeyjournal.np.example.andajsingh.journeyjournal.presentation.dashboard.fragments.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circular_image_view"
        android:layout_width="@dimen/image_height"
        android:layout_height="@dimen/image_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_profile_24x"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/gray_chateau"
        android:layout_marginTop="@dimen/widget_margin_normal"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/circular_image_view"
        android:gravity="center"
        tools:text="Sergio Ramos"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large"
        android:layout_marginTop="@dimen/widget_margin_normal"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:gravity="center"
        tools:text="SergioRamos@gmail.com"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginTop="@dimen/widget_margin_normal"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        android:gravity="center"
        tools:text="Kathmandu, Nepal"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginTop="@dimen/widget_margin_normal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_log_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/widget_margin_normal"
        android:text="@string/title_log_out"
        android:backgroundTint="@color/teal_200"/>

</androidx.constraintlayout.widget.ConstraintLayout>